<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.scrollActivity.ScrollActivity"
    android:orientation="vertical"
    android:id="@+id/mainLayout"
    android:background="@color/scrollMainLayout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleActivityLayout"
        android:background="@color/scrollTitleActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textTitleActivityTextView"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/bluetoothLayout">

            <Button
                android:text="отправить"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sendWithBtButton"
                android:layout_weight="1"
                android:visibility="visible" />

            <Button
                android:text="принять"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/getFromBtButton"
                android:layout_weight="1"
                android:visibility="visible" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bluetoothButton"
                android:layout_gravity="right|center_vertical"
                android:background="@android:drawable/ic_menu_share"
                android:layout_weight="0" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bodyScrollActivityScrollView"
        android:background="@color/scrollTitleActivity"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bodyScrollActivityLayout">

        </LinearLayout>
    </ScrollView>
</LinearLayout>
